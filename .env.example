# Frontend Environment Variables (Vite)
# Copy this file to .env.local for local development

# API URL for production (set this on Vercel)
# Leave commented for local development (uses localhost:3001)
# VITE_API_URL=https://api.yourdomain.com/api

# ============================================
# Backend Environment Variables (Node.js)
# ============================================

# MongoDB connection string (required for production)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/schools_crm

# MongoDB database name (optional, defaults to 'schools_crm')
# MONGODB_DB_NAME=schools_crm

# JWT secret for authentication (required in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# JWT_SECRET=your-secure-random-secret-key

# CORS allowed origins (comma-separated for multiple)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Server port (optional, defaults to 3001 or auto-assigned by PaaS)
# PORT=3001

# Node environment
# NODE_ENV=production

# OpenRouter (for photo leads OCR)
# OPENROUTER_API_KEY=sk-or-...

# AmoCRM (for sync stages + paper leads send)
# AMO_DOMAIN=xxx.amocrm.ru
# AMO_ACCESS_TOKEN= or AMO_LONG_TOKEN=
# AMO_REFRESH_TOKEN= or AMO_SHORT_KEY=
# AMO_CLIENT_ID= or INTEGRATION_ID=
# AMO_CLIENT_SECRET= or AMO_SECRET_KEY=
# Date from which dashboard is filled from Amo stages (YYYY-MM-DD). Before this date manual data is preserved.
# AMO_DASHBOARD_CUTOFF_DATE=2025-02-09
