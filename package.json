{
  "name": "schools-crm-dashboard",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "node server/index.js",
    "server:sandbox": "MODE=sandbox node server/index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "dev:sandbox": "concurrently \"npm run dev\" \"npm run server:sandbox\"",
    "copy-to-sandbox": "node scripts/copy-to-sandbox.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "migrate:mongodb": "node scripts/migrate-to-mongodb.js",
    "migrate:mongodb:dry": "node scripts/migrate-to-mongodb.js --dry-run",
    "migrate:mongodb:hash": "node scripts/migrate-to-mongodb.js --hash-passwords",
    "import:complete-ultimate": "node scripts/import-complete-ultimate-schools.js",
    "import:complete-ultimate:dry": "node scripts/import-complete-ultimate-schools.js --dry-run",
    "sync:amo-stages": "node scripts/sync-amo-stages.js",
    "sync:amo-stages:sandbox": "MODE=sandbox node scripts/sync-amo-stages.js",
    "sync:amo-stages:dry": "node scripts/sync-amo-stages.js --dry-run"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.3.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
